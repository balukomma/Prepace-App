<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnReview"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/ivTrophy"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_trophy"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep Practicing!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivTrophy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz completed successfully"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Circular Progress -->
                <ProgressBar
                    android:id="@+id/progressScore"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:progress="40"
                    android:max="100"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tvScorePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40%"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="@+id/progressScore"
                    app:layout_constraintBottom_toBottomOf="@+id/progressScore"
                    app:layout_constraintStart_toStartOf="@+id/progressScore"
                    app:layout_constraintEnd_toEndOf="@+id/progressScore"
                    android:layout_marginBottom="10dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Score"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    app:layout_constraintTop_toBottomOf="@+id/tvScorePercentage"
                    app:layout_constraintStart_toStartOf="@+id/progressScore"
                    app:layout_constraintEnd_toEndOf="@+id/progressScore"/>

                <!-- Stats Row -->
                <LinearLayout
                    android:id="@+id/layoutStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/progressScore"
                    android:baselineAligned="false">

                    <!-- Correct -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_result_card"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="4dp"
                        android:layout_marginEnd="8dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_shape"
                            android:backgroundTint="#E8F5E9">
                            
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check_green"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        
                        <TextView
                            android:id="@+id/tvCorrectCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correct"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <!-- Wrong -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_result_card"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="4dp"
                        android:layout_marginEnd="8dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_shape"
                            android:backgroundTint="#FFEBEE">
                            
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_close_red"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        
                        <TextView
                            android:id="@+id/tvWrongCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wrong"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <!-- Accuracy -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_result_card"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="4dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_shape"
                            android:backgroundTint="#E3F2FD">
                            
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_trend_blue"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        
                        <TextView
                            android:id="@+id/tvAccuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accuracy"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Motivation / Quotation -->
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/bg_result_card"
                     android:backgroundTint="#E3F2FD"
                     android:padding="16dp"
                     app:layout_constraintTop_toBottomOf="@+id/layoutStats"
                     android:layout_marginTop="24dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     android:gravity="center"
                     android:orientation="vertical">
                     
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="&quot;Success is not final, failure is not fatal: It is the courage to continue that counts.&quot;"
                         android:gravity="center"
                         android:textStyle="italic"
                         android:textSize="14sp"
                         android:textColor="#1565C0"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="- Winston Churchill"
                         android:gravity="center"
                         android:textSize="12sp"
                         android:textColor="#555555"
                         android:layout_marginTop="4dp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReview"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewOptions"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_gradient_bg"
        android:text="Review Answers"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_eye"
        android:drawableTint="@android:color/white"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewOptions"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toTopOf="@+id/btnHome"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        android:text="Retry Quiz"
        android:textColor="#333333"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F5F5F5"
        android:text="Back to Home"
        android:textColor="#555555"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
