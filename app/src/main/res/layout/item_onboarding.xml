<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Circular Logo with Gradient and Shadow -->
    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:cardCornerRadius="110dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        
        <FrameLayout
            android:id="@+id/flIconContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_container">
            
            <ImageView
                android:id="@+id/ivOnboarding"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_book"
                android:contentDescription="Onboarding Image" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textColor="#1A1A1A"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        xmlns:tools="http://schemas.android.com/tools"
        tools:text="Smart Quiz-\nBased Learning"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#777777"
        android:textSize="18sp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        xmlns:tools="http://schemas.android.com/tools"
        tools:text="Master concepts through interactive quizzes designed to enhance your understanding"/>

</LinearLayout>
