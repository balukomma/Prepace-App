<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Header Background -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_header_purple_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_circle_white_trans"
        android:padding="8dp"
        android:src="@drawable/ic_back_arrow"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Legal"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Privacy &amp; Terms of Service"
        android:textColor="#E1BEE7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <!-- Tab Switcher -->
    <LinearLayout
        android:id="@+id/llTabContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_tab_container"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/headerBg"
        app:layout_constraintBottom_toBottomOf="@+id/headerBg">

        <!-- Privacy Tab -->
        <LinearLayout
            android:id="@+id/tabPrivacy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_active"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPrivacyIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_shield_small"
                app:tint="@android:color/white"/>

            <TextView
                android:id="@+id/tvPrivacyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Privacy Policy"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Terms Tab -->
        <LinearLayout
            android:id="@+id/tabTerms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_inactive"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTermsIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file_terms"
                app:tint="#757575"/>

            <TextView
                android:id="@+id/tvTermsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Terms"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#757575"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_card_white"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/llTabContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Privacy Content -->
            <LinearLayout
                android:id="@+id/contentPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last updated: February 2, 2026"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginBottom="16dp"/>
                    
                <TextView
                    android:id="@+id/tvPrivacyBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    tools:text="1. Information We Collect..."/>
            </LinearLayout>

            <!-- Terms Content -->
            <LinearLayout
                android:id="@+id/contentTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Service"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last updated: February 2, 2026"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginBottom="16dp"/>
                    
                <TextView
                    android:id="@+id/tvTermsBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    tools:text="1. Acceptance of Terms..."/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
